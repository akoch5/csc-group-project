<Window x:Class="CSC578.TaskList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSC578"
        mc:Ignorable="d"
        Title="TaskList" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="204*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Cleaning Tasks" Margin="90,14,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="99" FontWeight="Bold"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="125" Margin="40,60,0,0" VerticalAlignment="Top" Width="165" Grid.RowSpan="2"/>
        <Button x:Name="btnAdd" Content="+" HorizontalAlignment="Left" Margin="228,5,0,0" VerticalAlignment="Top" Width="40" RenderTransformOrigin="0.25,0.25" Grid.Row="1"/>
        <Button x:Name="btnDelete" Content="-" HorizontalAlignment="Left" Margin="228,42,0,0" VerticalAlignment="Top" Width="40" RenderTransformOrigin="0.25,0.25" Grid.Row="1"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="97,150,0,0" VerticalAlignment="Top" Width="80" Grid.Row="1" Click="btnOK_Click"/>

    </Grid>
</Window>
