<Window x:Class="CSC578.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSC578"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="600" Margin="-2,1,0,0" VerticalAlignment="Top" Width="800">
            <TabItem Header="Food">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Cleaning">
                <Grid Background="#FFE5E5E5" Margin="1,0,-1,0">
                    <Rectangle Fill="#FFF4F4F5" Height="200" Margin="98,124,96,0" Stroke="Black" VerticalAlignment="Top"/>
                    <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="100" Margin="98,383,0,0" Stroke="Black" VerticalAlignment="Top" Width="600"/>
                    <Button x:Name="settingButton" Content="Settings" HorizontalAlignment="Left" Margin="18,40,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="settingButton_Click"/>
                    <Button x:Name="addButton" Content="Add Item" HorizontalAlignment="Left" Margin="86,48,0,0" VerticalAlignment="Top" Width="125" Height="35" Click="addButton_Click"/>
                    <DatePicker HorizontalAlignment="Left" Margin="345,54,0,0" VerticalAlignment="Top" Width="103"/>
                    <Button x:Name="leftButton" Content="L" HorizontalAlignment="Left" Margin="315,53,0,0" VerticalAlignment="Top" Width="25" Height="25"/>
                    <Button x:Name="rightButton" Content="R" Margin="453,53,316,0" VerticalAlignment="Top" Height="25"/>
                </Grid>
            </TabItem>
            <TabItem Header="Maintenance" Margin="-2,-2,-2,0">
                <Grid Background="#FFE5E5E5" Margin="1,0,-1,0"/>
            </TabItem>
            <TabItem Header="Kitchen 2.0" Margin="-2,-2,-2,0">
                <Grid Background="#FFE5E5E5" Margin="1,0,-1,0"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
